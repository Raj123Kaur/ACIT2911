<body>
{{> fakeNavBar }}
<!--Real Nav Bar-->
<nav class="navbar navbar-expand-lg navbar-light navbg pt-0">
  <a class="navbar-brand" href="http://localhost:8080/">
    <img src="img/nozamALogo2.png" width="100" height="35" alt="nozamA logo">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse mt-3" id="navbar">
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown">Categories</a>
        <div class="dropdown-menu dropmenu">
          <a href="http://localhost:8080/electronics" class="dropdown-item">Electronics</a>
          <a href="http://localhost:8080/groceries" class="dropdown-item">Groceries</a>
          <a href="http://localhost:8080/instruments" class="dropdown-item">Musical Instruments</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="http://localhost:8080/todays_deals">Today's Deals</a>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        {{> cartIcon}}
      {{{ loginlogoutButton }}}
      <li class="nav-item" id="registerbutton">
        <a href="#" class="nav-link" data-toggle="modal" data-target="#signup">Sign Up</a>
      </li>
    </ul>
  </div>
</nav>

<div class="modal fade" id="login">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Login</h5>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
      <form method="post" action="/login" id="login_form">
        <div class="modal-body">
          <div class="form-group">
            <label for="username">Username</label>
            <input name="username" type="text" class="form-control" id="username" placeholder="Enter Username" required>
          </div>
          <div class="form-group">
            <label for="loginpassword">Password</label>
            <input name="password" type="password" class="form-control" id="loginpassword" placeholder="Enter password" required>
          </div>
          <div class="form-group">
            <label for="vcode">Code</label>
            <input name="vcode" type="text" class="form-control" id="vcode" placeholder="Enter Verification Code" required>
          </div>
          {{{imgTag}}}
          <p>Click To Change!</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-dismiss="modal">
            Cancel
          </button>
          <button onclick="form_submit1()" value="Submit" class="btn btn-pink">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" id="signup">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sign Up</h5>
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
      </div>
      <form method="post" action="/register" id="register">
        <div class="modal-body">
          <div class="form-group">
            <label for="registeruser">Username</label>
            <input name="username" type="text" minlength="6" class="form-control" id="registeruser" placeholder="Enter Username" required>
          </div>
          <div class="form-group">
            <label for="registerpassword">Password</label>
            <div class="input-group">
              <input name="password" type="password" minlength="7" class="form-control" id="registerpassword" placeholder="Enter password" required
                     onKeyUp="CheckIntensity(this.value)">
              <div class="input-group-append">
                                <span class="input-group-text">
                                  <i class="fa fa-eye-slash" id="eye" role="button" onclick="reveal()"></i>
                                </span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <table border="0" cellpadding="0" cellspacing="0" style="transform:translateY(8px);">
              <tr align="center">
                <td id="pwd_Weak" class="pwd pwd_c"> </td>
                <td id="pwd_Medium" class="pwd pwd_c pwd_f">NULL</td>
                <td id="pwd_Strong" class="pwd pwd_c pwd_c_r"> </td>
              </tr>
            </table>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-dismiss="modal">
            Cancel
          </button>
          <button onclick="form_submit()" value="Submit" class="btn btn-pink">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="main-img">
  <h1 class="main-title mb-0 pt-5">My Shopping Cart</h1>
</div>
{{# each items}}
<div class="cart-item col-10 offset-1 mt-3 row">
  <div class="col-2">
      {{{this.cartImg}}}
  </div>
  <div class="col-5 my-auto">
    <h2 class="my-auto">{{this.title}}</h2>
  </div>
  <div class="col-5 my-auto" style="position: relative;">
    <form method="post" class="form-inline my-auto my-auto pull-right" action="/update_cart" >
        <p class="my-auto">quantity</p>
        <label class="my-1 mr-2" for="{{this.id}}"></label>
          <input type="number" max="5" min="0" name="qty" value="{{this.qty}}" id="{{this.id}}" maxlength="1" class="mr-2">
          <input type="hidden" name="{{this.id}}" value="3487">
        <div>
          <p class="my-auto"> &times; ${{this.price}} or {{this.points}} Points</p>
        </div>
      <div class="col-4" style="position: absolute; right: 0;">
          <label>
              <input class="btn btn-pink btn-md update-button" value="Update Cart" type="submit">
          </label>
      </div>
    </form>
  </div>
</div>
{{/each}}
<div class="container">
  <div class="row">
    <div class="col-4 offset-1 mt-4">
      <table class="table">
        <tr>
          <th>Sub Total:</th>
          <td>${{sub_total}}</td>
        </tr>
        <tr>
          <th>Tax:</th>
          <td>${{tax}}</td>
        </tr>
        <tr>
          <th>Total:</th>
          <td id="total">${{total}}</td>
        </tr>
        <tr>
          <th>Cost in Points:</th>
          <td id="total_points">{{point_cost}}</td>
        </tr>
      </table>
    </div>
    <div class="col-4 offset-1 align-items-center">
      <div style="display: inline-block;">
        <a class="btn btn-pink btn-md checkout-button" onClick="checkout_points()" href="#">Checkout With Points</a>
      </div>
      <div style="display: inline-block;">
        <a class="btn btn-success btn-md checkout-button" onClick="checkout()" href="#">Checkout With Money</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-3">
      <p id="current_points">Current Point Balance: {{currentPoints}}</p>
    </div>
  </div>
</div>
{{> footer}}
