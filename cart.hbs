<script>
  function CheckIntensity(pwd) {
    var Mcolor, Wcolor, Scolor, Color_Html;
    var m = 0;
    if (pwd.length == 0) {
      m = 0;
    } else if (pwd.length <= 3) {
      m = 1;
    } else if (pwd.length <= 6) {
      m = 2;
    } else {
      m = 3;
    }

    switch (m) {
      case 1:
        Wcolor = "pwd pwd_Weak_c";
        Mcolor = "pwd pwd_c";
        Scolor = "pwd pwd_c pwd_c_r";
        Color_Html = "Weak";
        break;
      case 2:
        Wcolor = "pwd pwd_Medium_c";
        Mcolor = "pwd pwd_Medium_c";
        Scolor = "pwd pwd_c pwd_c_r";
        Color_Html = "Medium";
        break;
      case 3:
        Wcolor = "pwd pwd_Strong_c";
        Mcolor = "pwd pwd_Strong_c";
        Scolor = "pwd pwd_Strong_c pwd_Strong_c_r";
        Color_Html = "Strong";
        break;
      default:
        Wcolor = "pwd pwd_c";
        Mcolor = "pwd pwd_c pwd_f";
        Scolor = "pwd pwd_c pwd_c_r";
        Color_Html = "NULL";
        break;
    }
    document.getElementById('pwd_Weak').className = Wcolor;
    document.getElementById('pwd_Medium').className = Mcolor;
    document.getElementById('pwd_Strong').className = Scolor;
    document.getElementById('pwd_Medium').innerHTML = Color_Html;
  }
</script>
<script>
  $("#captchapng").click(function(){
    $("#captchapng").attr('src',`/vcode?randomId=${Math.random()}`)
  });
</script>
<script>
    function checkout() {
        const string = "Are you sure you want to place your order for ";
        const test = confirm(string + document.getElementById('total').innerText + '?');
        if (test == true) {
            document.location.href = '/checkout';
        } else {
            document.location.href = '/cart';
        }
    }
</script>
<script>
    function checkout_points() {
        const string = "Are you sure you want to place your order for ";
        const test = confirm(string + document.getElementById('total_points').innerText + ' points?');
        if (test == true) {
            document.location.href = '/checkout_points';
        } else {
            document.location.href = '/cart';
        }
    }
</script>
{{{script}}}
</body>
</html>